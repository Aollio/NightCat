{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
//
//      "types" : [ "node" ],
//    "typeRoots": [
//      "../node_modules/@types"
//    ],

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "ES2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}